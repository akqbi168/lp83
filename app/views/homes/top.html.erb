  <div class="wrapper">
    <div class="ticket-container" id="ticket">
      <h2 id="title" class="ticket-title">
        TICKET
      </h2>

      <p class="cast-tag">
        CONTACT
      </p>

      <p class="about-text" style="margin-bottom: 40px">
        連日たくさんのお問い合わせいただいております。<br>
        以下のフォームよりお気軽にご連絡ください。
      </p>

      <div class="ticket-area">



        <form class="ticket-box-text" style="display: none">
          <div class="ticket-box">
            <label for="name">お名前</label><br>
            <input id="name" type="text" name="name" placeholder="ポマト　太郎" class="w100 h20px blk">
          </div>

          <div class="ticket-box">
            <label for="email">メールアドレス</label><br>
            <input id="email" type="text" name="name" placeholder="example@pomato.co.jp" class="w100 h20px blk"><br>
          </div>

          <div class="ticket-box">
            <label for="msg">お問い合わせ内容</label><br>
            <textarea id="msg" name="name" placeholder="お気軽にお問い合わせください。" class="w100 h100px blk"></textarea>
          </div>

          <%= button_to "送信", {type: "submit", name: "button", value: "送信"}, class: "ticket-area-button" %>
        </form>



        <%= form_for @form do |f| %>
          <div class="ticket-box">
            <h4>お名前</h4>
            <%#= f.text_field :name, {id:"name", type:"text", name:"name", placeholder:"ポマト　太郎", class:"w100 h20px blk"} %>
            <%= f.text_field :name, class:"w100 h20px blk" %>
          </div>

          <div class="ticket-box">
            <h4>メールアドレス</h4>
            <%#= f.text_field :email, {id:"email", type:"text", name:"email", placeholder:"example@pomato.co.jp", class:"w100 h20px blk"} %>
            <%= f.text_field :email, class:"w100 h20px blk" %>
          </div>

          <div class="ticket-box">
            <h4>お問い合わせ内容</h4>
            <%= f.text_area :body, class:"w100 h100px blk" %>
          </div>

          <%= f.submit '送信', class: "ticket-area-button" %>
        <% end %>

      </div>
    </div>
  </div>



