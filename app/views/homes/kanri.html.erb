<div class="wrapper">

  <h1 class="kanri-title">
    【管理画面】
  </h1>

  <div class="news-container">
    <h3 id="title" class="kanri-subtitle">
      <span class="kanri-subtitle-underline">ＮＥＷＳ</span>
    </h3>

    <%= button_to "NEWS 新規作成", {controller: 'homes', action: 'new'}, {method: :get, class: "create-link"} %>

    <% @newsall.each do |news| %>
      <div class="kanri-news-box">
        <span class="news-text-date">
          <%= news.year %>.<%= news.month %>.<%= news.date %>
        </span>
        <span class="news-text-title">
          <%= news.title %>
        </span><br>
        <span class="news-text-date">
          <%#= news.published %>
          <% if news.published == true %>
            <span class="published">公開中</span>
          <% elsif news.published == false %>
            <span class="draft">下書き</span>
          <% end %>
        </span>
        <span class="news-text-edit">
          <%= link_to "[編集]", edit_news_path(news.id), class: "" %>
        </span>
        <span class="news-text-edit">
          <%= link_to "[削除]", news_path(news.id), method: :delete, data: {confirm: "注意：この操作は取り消せません。削除してよろしいですか？"}, class: "" %>
        </span>
      </div>
    <% end %>

  </div>



  <div class="news-container">
    <h3 id="title" class="kanri-subtitle">
      <span class="kanri-subtitle-underline">ＰＡＲＴＮＥＲＳ</span>
    </h3>

    <%= button_to "PARTNERS 新規作成", {controller: 'homes', action: 'new'}, {method: :get, class: "create-link"} %>

    <% @partnersall.each do |p| %>
      <div class="kanri-p clearfix">
        <%= attachment_image_tag p, :partner_image, format: 'jpeg', fallback: "", class: "kanri-p-image" %>
        <div class="kanri-p-text">
          名前：　　<%= p.name %><br>
          URL：　　<%= link_to p.link do %>
                    <%= p.link %>
                  <% end %><br>
          タグ：　　<%= p.tag_id %><br>
          状態：　　<span class="news-text-date">
                    <% if p.published == true %>
                      <span class="published">公開中</span>
                    <% elsif p.published == false %>
                      <span class="draft">下書き</span>
                    <% end %>
                  </span><br>
          操作：　　<%= link_to "[編集]", edit_partner_path(p.id), class: "" %>
          　　<%= link_to "[削除]", partner_path(p.id), method: :delete, data: {confirm: "注意：この操作は取り消せません。削除してよろしいですか？"}, class: "" %>
        </div>
      </div>

    <% end %>

  </div>

</div>