<div class="wrapper min-h-100">
  <div class="create-news">
    <h1>編集（ニュース）</h1>

    <%= form_for @news do |f| %>

      <h4>日付</h4>
      <%#= date_field_tag :date %>
      <%= f.number_field :year, class: "create-news-date blk" %>年　
      <%= f.number_field :month, class: "create-news-date blk" %>月　
      <%= f.number_field :date, class: "create-news-date blk" %>日

      <h4>タイトル</h4>
      <%= f.text_area :title, class: "create-news-title blk" %>

      <h4>公開非公開</h4>
      <%= f.select :published, {'公開': 1, '下書き': 0}, {include_blank: ''}, { class: 'blk' , required: true } %>

      <%= f.submit '更新', class: "submit-link" %>

    <% end %>
  </div>
</div>